map b 'bulk -S sh -E nvim -b mv -s 0 -R .'

map <left> 'move -l'
map <right> 'move -r'
map <up> 'move -u'
map <down> 'move -d'

alias shell "exec -ncw ${SHELL} -c $0"
map s "console -a 'shell '"
alias bulkrename 'bulk -n -S sh -E vim -b mv -ss'
map b "bulkrename"
map B "bulkrename -NR"

set ThreadsForDir true
set ThreadsForFile true
set FileOpener "NULL"
set shell "sh"
set editor "nvim"
set BinaryPreview "mediainfo"
set Values "KMGTPEZY"
set Bar1Settings B_DIR|B_NAME|B_UHNAME|B_WORKSPACES|B_POSITION|B_FGROUP|B_MODES|B_CSF|B_FHBAVAIL
set Bar2Settings DP_LSPERMS|DP_SMTIME
set UserHostPattern "%s@%s"
set UserRHost false
set CopyBufferSize 131072
set MoveOffSet 0.2
set WrapScroll false
set JumpScroll false
set JumpScrollValue 0.5
set StatusBarOnTop false
set Win1Enable true
set Win3Enable true
set Bar1Enable true
set Bar2Enable true
set PreviewSettings PREV_DIR|PREV_FILE|PREV_ASCII|PREV_BINARY
set WinSizeMod {0.132,0.368}
set Borders false
set C_Borders COL_1|A_BOLD
set FillBlankSpace true
set WindowBorder {0,0,0,0,0,0,0,0}
set EnableColor true
set DelayBetweenFrames 1024
set SDelayBetweenFrames 1
set NumberLines false
set NumberLinesOff false
set NumberLinesFromOne false
set DirLoadingMode 0
set DisplayingC DP_HSIZE
set PreviewMaxThreads 8
set SortMethod SORT_NAME|SORT_BETTER_FILES
set BetterFiles {T_DIR,T_DIR|T_SYMLINK}
set DirSizeMethod D_C
